<form action="/notes/save" method="post">
    <input type="hidden" name="doCreate" value='<%=doCreate ? "create" : "update"%>' />
    <p>
        Key: {{#if doCreate }}
        <input type="text" name="noteKey" value="" />
        {{else}} {{#if note }}{{noteKey}}{{/if}}
        <input type="hidden" name="noteKey" value="{{#if note }}{{noteKey}}{{/if}}" />
        {{/if}}
    </p>
    <p>Title: <input type="text" name="title" value="{{#if note }}{{note.title}}{{/if}}" /></p>
    <p>
        <textarea name="body" cols="40" rows="5">{{#if note }}{{note.body}}{{/if}}</textarea>
    </p>
    <p>
        <input type="submit" value="Submit" />
    </p>
</form>
